<div class="jumbotron">
  <div class="col-lg-offset-1">
    <% unless notice.nil? then %>
      <div class="container">
        <div class="col-md-11">
          <div class="panel panel-success">
            <div class="panel-heading">
              <h3 class="panel-title">Success</h3>
            </div>
            <div class="panel-body">
              <%= notice %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    <div class="container">
      <div class="col-md-5">
        <h3>Name:</h3>
        <p class="text-primary"><%= @book.name %></p>
      </div>
    </div>

    <div class="container">
      <div class="col-md-5">
        <h3>Description:</h3>
        <p class="text-primary"><%= @book.description %></p>
      </div>
    </div>

    <div class="container">
      <div class="col-md-5">
        <h3>Status:</h3>
        <p class="text-primary"><%= @book.status %></p>
      </div>
    </div>
    <div class="container">
      <div class="col-md-5">
        <% unless @book.categories.nil? %>
          <table class="table table-striped table-hover">
            <tr>
              <th>Categories</th>
            </tr>
            <% @book.categories.each do |category| %>
              <tr>
                <td><%= category.title %> </td>
              </tr>
            <% end %>
          </table>
        <% end %>
      </div>
    </div>
    <div class="container">
      <div class="col-md-5">
<%#= image_tag @book.image.url %>
        <%= image_tag @book.image.url(:medium) %>
<%#= image_tag @book.image.url(:thumb) %>
      </div>
    </div>
    <div class="container">
      <div class="col-md-5 buttons">
        <%= link_to 'Edit', edit_book_path(@book), :class=>'btn btn-primary' %>
        <%= link_to 'Back', books_path, :class=>'btn btn-primary' %>
      </div>
    </div>
  </div>
</div>