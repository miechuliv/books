<%= form_for(@book, multipart: true) do |f| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_field :description %>
  </div>
  <div class="field">
    <%= select_tag('book[status]', options_for_select([ ['True', 't'], ['Flase', 'f'] ], @book.status == true ? 't':'f')) %>

  <%#= f.label :status %><br>
  <%#= f.text_field :status %>
  </div>


  <div class="field">
    <table>
      <tr>
        <th>#</th>
        <th>Category name</th>
      </tr>
      <%= collection_check_boxes(:book, :category_ids, @categories, :id, :title) do |box|%>
        <tr>
          <td><%= box.check_box %></td>
          <td><%= box.label %></td>
        </tr>
      <% end %>
    </table>
  </div>




  <div class="field">
    <%= f.file_field :image %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
