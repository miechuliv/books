<h1>Listing ratings</h1>

<table class="table table-striped table-hover text-center">
  <thead>
    <tr>
      <th class="text-center">Value</th>
      <th class="text-center">Book</th>
      <th colspan="3" class="text-center">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @ratings.each do |rating| %>
      <tr>
        <td><%= rating.stars %></td>
        <td><%= unless rating.rateable.nil? then rating.rateable.name else '' end %></td>
        <td><%= link_to 'Show', rating_path(:id => rating.id) %></td>
        <td><%= link_to 'Edit', edit_rating_path(rating) %></td>
        <td><%= link_to 'Destroy', rating, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Rating', new_rating_path, :class=>'btn btn-primary' %>
