<div class="jumbotron">
  <div class="col-lg-offset-1">
    <% unless notice.nil? then %>
      <div class="container">
        <div class="col-md-11">
          <div class="panel panel-success">
            <div class="panel-heading">
              <h3 class="panel-title">Success</h3>
            </div>
            <div class="panel-body">
              <%= notice %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    <div class="container">
      <div class="col-md-5">
        <h3>Title: </h3>
        <p class="text-primary"><%= @category.title %></p>
      </div>
    </div>

    <div class="container">
      <div class="col-md-5">
        <h3>Description:</h3>
        <p class="text-primary"><%= @category.description %></p>
      </div>
    </div>

    <div class="container">
      <div class="col-md-5">
        <h3>Status:</h3>
        <p class="text-primary"><%= @category.status %></p>
      </div>
    </div>
    <%  unless @category.parent.nil? then %>
      <div class="container">
        <div class="col-md-5">
          <h3>Parent Category:</h3>
          <p class="text-primary"><%= @category.parent.title %></p>
        </div>
      </div>
    <% end %>
    <div class="container">
      <div class="col-md-5 buttons">
        <%= link_to 'Edit', edit_category_path(@category), :class=>'btn btn-primary' %>
        <%= link_to 'Back', categories_path, :class=>'btn btn-primary' %>
      </div>
    </div>
  </div>
</div>
